<head>
  <style type="text/css">
      .tableFloatingHeaderOriginal th {
          background-color: #fff;
          border-bottom: 1px solid #DDD;
      }
  </style>
</head>
<h1>SpaceTimes (simple view)</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Room</th>
      <th>Session</th>
      <th>Start</th>
      <th>End</th>
      <th>Available</th>
    </tr>
  </thead>
  <% @spacetimes.each do |spctime| %>
      <tr id="spacetime-<%= spctime.id %>">
        <td><%= spctime.room %></td>
        <td><%= spctime.session %></td>
        <td><%= spctime.start_time.strftime("%A %I:%M %p") %></td>
        <td><%= spctime.end_time.strftime("%A %I:%M %p") %></td>
        <td><%= spctime.available %></td>
      </tr>
  <% end %>
</table>
<script>
    var offset = $('.navbar').height();
    $("html:not(.legacy) table").stickyTableHeaders({fixedOffset: offset});
</script>